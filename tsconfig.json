{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx"
  },
  "include": [
    "server/src/**/*",
    "admin/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
